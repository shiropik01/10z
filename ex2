print("Программа, которая запрашивает у пользователя ввод трех чисел по очереди в порядке возрастания.")
while True:
    try:
        num1 = int(input("Введите первое число: "))
        break
    except:
        print("Ошибка. Введите число!")

while True:
    try:
        num2 = int(input("Введите второе число: "))

        if num2 > num1:
            break
        else:
            print("Ошибка. Второе число должно быть больше первого!")

    except:
        print("Ошибка. Введите число!")

while True:
    try:
        num3 = int(input("Введите третье число: "))

        if num3 > num2:
            break
        else:
            print("Ошибка. Третье число должно быть больше второго!")

    except:
        print("Ошибка. Введите число!")

print("Последовательность принята")
